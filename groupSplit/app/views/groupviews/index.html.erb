<%= stylesheet_link_tag 'style.css' %>

<h2 id="groupviews">Group Views</h2>

<h3>Balance Summary</h3>
<table>
  <tr>
    <th>user_name</th>
    <th>balance</th>
  </tr>
  <tr>
    <% @payments.each do |p| %>
    <tr>
      <td><%= p.user_name %></td>
      <td>$ <%= p.balance %></td>
    </tr>
  <% end %>
  </tr>
</table>


<h3>Transaction Records</h3>
<table>
  <tr>
    <th>id</th>
    <th>user_name</th>
    <th>trans_amount</th>
    <th>trans_type</th>
    <th>invoved_group_members</th>
    <th>trans_date</th>
    <th>More Info</th>
  </tr>
  <tr>
    <% @transactions.each do |t| %>
      <tr>
        <td><%= t.id %></td>
        <td><%= t.user_name %></td>
        <td><%= t.trans_number %></td>
        <td><%= t.trans_type %></td>
        <td><%= t.group_member %></td>
        <td><%= t.trans_date %></td>
        <td>
          <%= link_to "Detail about Transaction #{t.id}", transaction_path(t) %>
        </td>
      </tr>
    
    <% end %>
  </tr>
</table>

<%= button_to "Create New Transaction", "/transactions/new", method: "get", class:"btn-hover color" %>

<%= button_to "Manage Group Members", "/members/new", method: "get", class:"btn-hover left" %>